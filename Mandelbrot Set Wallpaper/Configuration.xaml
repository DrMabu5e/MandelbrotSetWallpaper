                </WrapPanel>
                -->
                
                



            </StackPanel>
            <StackPanel>
                <Image Name="PreviewWindow" HorizontalAlignment="Left" Height="225" Margin="10,10,0,0" VerticalAlignment="Top" Width="400"/>


            </StackPanel>

        </WrapPanel>

        <WrapPanel  Margin="0,50,0,0">
            <Button Name="CreatePreviewButton" Margin="0,10,20,0" Width="125" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Button_Click">Preview</Button>

            <Button Name="Save2File" Margin="0,10,10,0" Width="125" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Save2File_Click">Save</Button>
        </WrapPanel>

    </StackPanel>

</Page>
