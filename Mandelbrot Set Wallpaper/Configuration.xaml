    <StackPanel>
        <WrapPanel>
            <StackPanel>
                <!-- User Input 
                <TextBlock Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" Background="LightSkyBlue">Start Position</TextBlock> -->
                <Label Margin="0,10,0,0" HorizontalContentAlignment="Center" VerticalAlignment="Center" Foreground="Black" Background="LightSkyBlue" >Start Position</Label>

                <WrapPanel>
                    <Label Margin="0,10,0,0" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black">Re</Label>
                    <TextBox Name="StRe" Margin="0,10,0,0" Width="50" Height="25" HorizontalAlignment="Left" Text="-1"></TextBox>
                    <Label Margin="0,10,0,0" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black">Im</Label>
                    <TextBox Name="StIm" Margin="0,10,0,0" Width="50" Height="25" HorizontalAlignment="Left" Text="1"></TextBox>
                </WrapPanel>

                <Label Margin="0,10,0,0" Content="End Position" HorizontalContentAlignment="Center" Background="LightSkyBlue"/>

                <WrapPanel>
                    <Label Margin="0,10,0,0" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center">Re</Label>
                    <TextBox Name="EnRe" Margin="0,10,0,0" Width="50" Height="25" HorizontalAlignment="Left" Text="0"></TextBox>
                    <Label Margin="0,10,0,0" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black">Im</Label>
                    <TextBox Name="EnIm" Margin="0,10,0,0" Width="50" Height="25" HorizontalAlignment="Left" Text="0,4375"></TextBox>
                </WrapPanel>

                <Label Margin="0,10,0,0" Content="Algorithm" HorizontalContentAlignment="Center" Background="LightSkyBlue"/>

                <WrapPanel>
                    <Label Margin="0,10,0,0" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center">Maximum Iterations</Label>
                    <TextBox Name="MxIt" Margin="0,10,0,0" Width="50" Height="25" HorizontalAlignment="Left" Text="200"></TextBox>
                </WrapPanel>

                <WrapPanel>
                    <Label Margin="0,10,0,0" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center">Resolution</Label>
                    <TextBox Name="RsX" Margin="0,10,0,0" Width="50" Height="25" HorizontalAlignment="Left" Text="1920"></TextBox>
                    <TextBox Name="RsY" Margin="0,10,0,0" Width="50" Height="25" HorizontalAlignment="Left" Text="1080"></TextBox>
                </WrapPanel>

                <WrapPanel>
                    <Label Margin="0,10,0,0" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center">Color Mode</Label>
                    <StackPanel Margin="20,0,0,0">
                        <Label HorizontalAlignment="Center" VerticalAlignment="Center">RGB</Label>
                        <CheckBox Name="CM1"  HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
                    </StackPanel>

                    <StackPanel Margin="10,0,0,0">
                        <Label HorizontalAlignment="Center" VerticalAlignment="Center">HSV</Label>
                        <CheckBox Name="CM2"  HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
                    </StackPanel>
                    
                </WrapPanel>


                <!--
                <Label Visibility="Collapsed" Margin="0,10,0,0" Content="Save Location and File Name" HorizontalContentAlignment="Center" Background="LightSkyBlue"/>

                <WrapPanel Visibility="Collapsed">
